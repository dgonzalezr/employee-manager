{
  "extends": ["prettier", "prettier/flowtype", "prettier/react"],
  "plugins": ["react", "react-native", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "arrow-body-style": "warn",
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "parser": "flow",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
      }
    ],
    "react/prop-types": 0
  }
}
